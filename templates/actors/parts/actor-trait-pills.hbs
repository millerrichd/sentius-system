{{#if (or @root.editable values)}}
<div class="pills-group {{#unless values}}empty{{/unless}}">
    <h3 class="icon">
        {{#if icon}}<i class="{{ icon }}"></i>
        {{~else if svg}}<sentius-icon src="systems/sentius/icons/svg/{{ svg }}.svg"></sentius-icon>{{/if}}
        <span class="roboto-upper">{{ localize label }}</span>
        {{#if @root.editable}}
        <a class="trait-selector" data-trait="{{ key }}"
           data-tooltip="{{ localize "SENTIUS.TraitConfig" trait=(localize label) }}"
           aria-label="{{ localize "SENTIUS.TraitConfig" trait=(localize label) }}">
            <i class="fas fa-cog"></i>
        </a>
        {{/if}}
    </h3>
    <ul class="pills">
        {{#each values}}
        <li class="pill {{ ../color }} {{ color }}">
            {{#each icons}}
            <i class="{{ icon }}" data-tooltip="{{ label }}" aria-label="{{ label }}"></i>
            {{/each}}
            <span class="label">{{ label }}</span>
        </li>
        {{/each}}
    </ul>
</div>
{{/if}}
