<div class="statblock npc">
    <h4 class="statblock-title">{{ document.name }}</h4>
    <span class="statblock-tags">{{ summary.tag }}</span>
    <div class="statblock-content">
        <div class="statblock-header">
            <dl>
                <div class="half-width">
                    <dt>{{ localize "SENTIUS.AC" }}</dt>
                    <dd>{{ system.attributes.ac.value }}</dd>
                </div>
                <div class="half-width">
                    <dt>{{ localize "SENTIUS.Initiative" }}</dt>
                    <dd>{{ summary.initiative }}</dd>
                </div>
                <div>
                    <dt>{{ localize "SENTIUS.HP" }}</dt><dd>{{ system.attributes.hp.max }}</dd>
                    {{~#if system.attributes.hp.formula~}}
                    <dd>({{ system.attributes.hp.formula }})</dd>
                    {{~/if~}}
                </div>
                <div>
                    <dt>{{ localize "SENTIUS.Speed" }}</dt>
                    <dd>{{ summary.speed }}</dd>
                </div>
            </dl>
            <div class="abilities">
                {{#each abilityTables}}
                <table>
                    <thead>
                        <tr>
                            <th scope="col" class="visually-hidden">{{ localize "SENTIUS.Ability" }}</th>
                            <th scope="col" class="visually-hidden">{{ localize "SENTIUS.AbilityScoreShort" }}</th>
                            <th scope="col">{{ localize "SENTIUS.AbilityModifierShort" }}</th>
                            <th scope="col">{{ localize "SENTIUS.SavingThrowShort" }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each abilities}}
                        <tr>
                            <th scope="row">{{ label }}</th>
                            <td class="score">{{ sentius-numberFormat value }}</td>
                            <td>{{ sentius-numberFormat mod signDisplay="always" }}</td>
                            <td>{{ sentius-numberFormat save signDisplay="always" }}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{/each}}
            </div>
            <dl>
                {{#if summary.skills}}
                <div>
                    <dt>{{ localize "SENTIUS.Skills" }}</dt>
                    <dd>{{ summary.skills }}</dd>
                </div>
                {{/if}}
                {{#if summary.gear}}
                <div>
                    <dt>{{ localize "SENTIUS.Gear" }}</dt>
                    <dd>{{ summary.gear }}</dd>
                </div>
                {{/if}}
                {{#if summary.vulnerabilities}}
                <div>
                    <dt>{{ localize "SENTIUS.Vulnerabilities" }}</dt>
                    <dd>{{ summary.vulnerabilities }}</dd>
                </div>
                {{/if}}
                {{#if summary.resistances}}
                <div>
                    <dt>{{ localize "SENTIUS.Resistances" }}</dt>
                    <dd>{{ summary.resistances }}</dd>
                </div>
                {{/if}}
                {{#if summary.immunities}}
                <div>
                    <dt>{{ localize "SENTIUS.Immunities" }}</dt>
                    <dd>{{ summary.immunities }}</dd>
                </div>
                {{/if}}
                <div>
                    <dt>{{ localize "SENTIUS.Senses" }}</dt>
                    <dd>{{ summary.senses }}</dd>
                </div>
                <div>
                    <dt>{{ localize "SENTIUS.Languages" }}</dt>
                    <dd>{{ summary.languages }}</dd>
                </div>
                <div>
                    <dt>{{ localize "SENTIUS.AbbreviationCR" }}</dt>
                    <dd>{{ summary.cr }}</dd>
                </div>
            </dl>
        </div>
        {{#each actionSections}}
        <div class="statblock-actions {{ @key }}">
            <h5 class="statblock-actions-title">{{ label }}</h5>
            {{#each actions}}
            <div class="statblock-action">
                <p>
                    <span class="name">{{ name }}</span>
                    {{{ description }}}
                </p>
            </div>
            {{/each}}
        </div>
        {{/each}}
    </div>
</div>
