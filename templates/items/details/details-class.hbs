<fieldset>
    <legend>{{ localize "SENTIUS.ItemClassDetails" }}</legend>

    {{!-- Identifier --}}
    <div class="form-group">
        <label>{{ localize "SENTIUS.Identifier" }}</label>
        <div class="form-fields">
            {{ formInput fields.identifier value=source.identifier placeholder=item.identifier }}
        </div>
        <p class="hint">
            {{{ localize "SENTIUS.ClassIdentifierHint" identifier=item.identifier }}}
            {{ localize "SENTIUS.IdentifierError" }}
        </p>
    </div>

    {{!-- Hit Dice --}}
    <div class="form-group split-group">
        <label>{{ localize "SENTIUS.CLASS.FIELDS.hd.label" }}</label>
        <div class="form-fields">

            {{!-- Denomination --}}
            {{ formField fields.hd.fields.denomination value=source.hd.denomination options=hitDieTypes label="SENTIUS.Denomination"
                         localize=true classes="label-top" }}

            {{!-- Spent --}}
            {{ formField fields.hd.fields.spent value=source.hd.spent placeholder="0" localize=true label="SENTIUS.Spent"
                         classes="label-top" }}
        </div>
    </div>

    {{#if source.hd.additional}}
    {{ formGroup fields.hd.fields.additional value=source.hd.additional localize=true }}
    {{/if}}
</fieldset>

<fieldset>
    <legend>{{ localize "SENTIUS.CLASS.Multiclass.Title" }}</legend>

    {{!-- Primary Ability --}}
    {{ formField fields.primaryAbility.fields.value value=source.primaryAbility.value options=primaryAbilities }}

    {{!-- All Required --}}
    {{#if (gt source.primaryAbility.value.length 1)}}
    {{ formField fields.primaryAbility.fields.all value=source.primaryAbility.all input=inputs.createCheckboxInput }}
    {{/if}}
</fieldset>
