<fieldset>
    <legend>{{ localize "SENTIUS.ItemEquipmentDetails" }}</legend>

    {{!-- Equipment Type --}}
    {{ formField fields.type.fields.value value=source.type.value label="SENTIUS.ItemEquipmentType" blank=""
                 localize=true options=equipmentTypes }}

    {{!-- Equipment Base --}}
    {{#if baseItems}}
    {{ formField fields.type.fields.baseItem value=source.type.baseItem label="SENTIUS.ItemEquipmentBase" blank=""
                 localize=true choices=baseItems }}
    {{/if}}

    {{!-- Proficiency --}}
    {{ formField fields.proficient value=source.proficient blank="SENTIUS.Automatic" localize=true
                 choices=config.weaponAndArmorProficiencyLevels }}

    {{!-- Armor --}}
    {{#if system.isArmor}}
    <div class="form-group split-group">
        <label>{{ localize "SENTIUS.Armor" }}</label>
        <div class="form-fields">

            {{!-- Value --}}
            {{ formField fields.armor.fields.value value=source.armor.value step=1 label="SENTIUS.AC" localize=true
                         classes="label-top" }}

            {{!-- Max Dex --}}
            {{#if hasDexModifier}}
            {{ formField fields.armor.fields.dex value=source.armor.dex label="SENTIUS.ItemEquipmentDexModAbbr"
                         placeholder="∞" localize=true classes="label-top" }}
            {{/if}}

            {{!-- Strength Requirement --}}
            {{#if system.isArmor}}
            {{ formField fields.strength value=source.strength label="SENTIUS.AbilityStr" placeholder="—" localize=true
                         classes="label-top" }}
            {{/if}}
        </div>
    </div>
    {{/if}}

    {{!-- Properties --}}
    {{ formField fields.properties options=properties.options label="SENTIUS.ItemEquipmentProperties" localize=true
                 input=inputs.createMultiCheckboxInput stacked=true classes="checkbox-grid checkbox-grid-3" }}

    {{!-- Magical Properties --}}
    {{#if properties.object.mgc}}
    <div class="form-group split-group">
        <label>{{ localize "SENTIUS.Item.Property.Magical" }}</label>
        <div class="form-fields">

            {{!-- Attunement --}}
            {{#unless system.isMountable}}
            <div class="form-group label-top">
                <label>{{ localize "SENTIUS.Attunement" }}</label>
                <div class="form-fields">

                    {{!-- Attuned --}}
                    {{#if source.attunement}}
                    {{ formInput fields.attuned value=source.attuned input=inputs.createCheckboxInput
                                 ariaLabel=(localize "SENTIUS.Attuned") dataset=(sentius-object tooltip="SENTIUS.Attuned") }}
                    {{/if}}

                    {{!-- Attunement --}}
                    {{ formInput fields.attunement value=source.attunement choices=config.attunementTypes
                                 blank="SENTIUS.AttunementNone" localize=true }}
                </div>
            </div>
            {{/unless}}

            {{!-- Magical Bonus --}}
            {{ formField fields.armor.fields.magicalBonus value=source.armor.magicalBonus step=1 placeholder="0"
                         label="SENTIUS.Bonus" localize=true classes="label-top" }}
        </div>
    </div>
    {{/if}}
</fieldset>

{{#if system.isMountable}}
    {{> "sentius.details-mountable" }}
{{/if}}
