<table class="core-traits">
    <caption>{{ localize "JOURNALENTRYPAGE.SENTIUS.Class.Traits.Caption" class=linked.name }}</caption>
    <tbody>
        <tr>
            <th scope="row">{{ localize "SENTIUS.CLASS.FIELDS.primaryAbility.value.label" }}</th>
            <td>{{ primaryAbility }}</td>
        </tr>
        <tr>
            <th scope="row">{{ localize "SENTIUS.CLASS.FIELDS.hd.label" }}</th>
            <td>{{ localize "JOURNALENTRYPAGE.SENTIUS.Class.HitPoints.HitDiceModern" dice=advancement.hp.hitDice
                   class=linked.name }}</td>
        </tr>
        <tr>
            <th scope="row">{{ localize "SENTIUS.TraitSavesPlural.other" }}</th>
            <td>{{ advancement.traits.saves }}</td>
        </tr>
        <tr>
            <th scope="row">{{ localize "SENTIUS.TraitSkillsPlural.other" }}</th>
            <td>{{ advancement.traits.skills }}</td>
        </tr>
        <tr>
            <th scope="row">{{ localize "SENTIUS.TraitWeaponPlural.other" }}</th>
            <td>{{ advancement.traits.weapons }}</td>
        </tr>
        <tr>
            <th scope="row">{{ localize "SENTIUS.TraitToolPlural.other" }}</th>
            <td>{{ advancement.traits.tools }}</td>
        </tr>
        <tr>
            <th scope="row">{{ localize "SENTIUS.TraitArmorPlural.other" }}</th>
            <td>{{ advancement.traits.armor }}</td>
        </tr>
        <tr>
            <th scope="row">{{ localize "SENTIUS.StartingEquipment.Title" }}</th>
            <td>{{{ advancement.equipment }}}</td>
        </tr>
    </tbody>
</table>
