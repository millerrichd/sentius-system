<div class="sentius2 chat-card bastion-card">

    {{!-- Description --}}
    <p class="order-description">{{{ description }}}</p>

    {{!-- Damaged --}}
    {{#if damaged}}
    <p class="order-description">{{{ damaged }}}</p>
    {{/if}}

    {{!-- Roll --}}
    {{{ roll }}}

    {{!-- Buttons --}}
    {{#if buttons.length}}
    <div class="card-buttons">
        {{#each buttons}}
        <button type="button" {{ sentius-dataset dataset }}>
            {{{ icon }}} <span>{{{ label }}}</span>
        </button>
        {{/each}}
    </div>
    {{/if}}

</div>
